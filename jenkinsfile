pipeline {
    agent {
        docker {
            image 'ppodgorsek/robot-framework'
            args '-u root -v /tmp/.cache:/root/.cache'
        }
    }

    stages {
               stage('Install Dependencies') {
            steps {
                sh 'pip install --user -r requirements.txt --no-cache-dir'
             }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh 'python3 -m robot demo.robot'                    
                }
            }
        }
    }
    

}
